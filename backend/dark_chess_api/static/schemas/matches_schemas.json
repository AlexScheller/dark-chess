{
	"get_match" : {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"title" : "Get Match",
		"description" : "Get info for a given match.",
		"endpoint" : "/match/<int:id>",
		"additional_headers" : [
			"Authorization: Bearer <token>"
		],
		"request_method" : "GET",
		"response_codes" : [200, 404]
	},
	"get_open_matches" : {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"title" : "Get Open Matches",
		"description" : "Get list of all open matches.",
		"endpoint" : "/match/open-matches",
		"additional_headers" : [
			"Authorization: Bearer <token>"
		],
		"request_method" : "GET",
		"response_codes" : [200]
	},
	"create_match" : {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"title" : "Create Match",
		"description" : "Create a new match.",
		"endpoint" : "/match/create",
		"request_method" : "POST",
		"additional_headers" : [
			"Authorization: Bearer <token>"
		],
		"type" : "None",
		"response_codes" : [200, 400]
	},
	"join_match" : {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"title" : "Join Match",
		"description" : "Join a new match.",
		"endpoint" : "/match/<int:id>/join",
		"request_method" : "PATCH",
		"additional_headers" : [
			"Authorization: Bearer <token>"
		],
		"type" : "None",
		"responses" : [
			{
				"code": 200,
				"example_json" : {
					"match": {
						"current_fen": "rnbqkbnr/pppppppp/8/8/8/8/PPPPPPPP/RNBQKBNR w KQkq - 0 1",
						"history": [
							"rnbqkbnr/pppppppp/8/8/8/8/PPPPPPPP/RNBQKBNR w KQkq - 0 1"
						],
						"id": 1,
						"is_finished": false,
						"player_black": {
							"id": 1,
							"username": "maya"
						},
						"player_white": {
							"id": 2,
							"username": "tony"
						}
					},
					"message": "Player successfully joined match."
				}
			},
			{
				"code": 409,
				"example_json" : {
					"error": "Conflict",
					"message" : "Player already in match"
				}
			}

		]
	},
	"make_move" : {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"title" : "Make Move",
		"description" : "Attempt a move in a given match.",
		"endpoint" : "/match/<int:id>/make-move",
		"request_method" : "POST",
		"additional_headers" : [
			"Authorization: Bearer <token>"
		],
		"type" : "object",
		"properties" : {
			"uci_string" : {
				"type" : "string",
				"description" : "The attempted move in uci format",
				"pattern" : "^[a-h][1-8][a-h][1-8][r|n|b|q]?$"
			}
		},
		"responses" : [
			{
				"code": 200,
				"example_json" : {
					"message": "Move successfully made",
					"user": {
						"registration_date": {
							"formatted" : "Wed, 06 Mar 2019 03:47:27 GMT",
							"timestamp" : 1551844047
						},
						"username": "maya"
					}
				}
			},
			{
				"code": 403,
				"example_json" : {
					"error": "Forbidden",
					"message" : "Player not playing this match"
				}
			},
			{
				"code" : 404
			},
			{
				"code" : 405
			},
			{
				"code": 409,
				"example_json" : {
					"error": "Conflict",
					"message" : "Not your turn"
				}
			},
			{
				"code": 422,
				"example_json" : {
					"error": "Unprocessable Entity",
					"message" : "Move not possible"
				}
			},
			{
				"code" : 500
			}
		]
	}
}