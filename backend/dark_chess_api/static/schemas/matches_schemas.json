{
	"get_match" : {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"title" : "Get Match",
		"description" : "Get info for a given match.",
		"endpoint" : "/match/<int:id>",
		"request_method" : "GET",
		"response_codes" : [200, 404]
	},
	"get_open_matches" : {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"title" : "Get Open Matches",
		"description" : "Create list of all open matches.",
		"endpoint" : "/match/open-matches",
		"request_method" : "GET",
		"response_codes" : [200]
	},
	"create_match" : {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"title" : "Create Match",
		"description" : "Create a new match.",
		"endpoint" : "/match/create",
		"request_method" : "POST",
		"type" : "object",
		"properties" : {
			"player_id" : {
				"type" : "integer",
				"description" : "The id of the creating player."
			}
		},
		"required" : ["player_id"],
		"response_codes" : [200, 400]
	},
	"join_match" : {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"title" : "Join Match",
		"description" : "Join a new match.",
		"endpoint" : "/match/<int:id>/join",
		"request_method" : "POST",
		"type" : "object",
		"properties" : {
			"player_id" : {
				"type" : "integer",
				"description" : "The id of the creating player."
			}
		},
		"required" : ["player_id"],
		"response_codes" : [200, 400]
	},
}