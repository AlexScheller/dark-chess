{
	"aquire_token" : {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"title" : "Aquire Token",
		"description" : "Aquire an api token for a given user.",
		"endpoint" : "/user/auth/token",
		"request_method" : "GET",
		"additional_headers" : [
			"Authorization: Basic <username>:<password>"
		],
		"type" : "None",
		"responses" : [
			{
				"code": 200,
				"example_json": {
					"token": "b675e4f3ed1939390a868317fb08ff15ab56df5ba2416caa321a7d6a7bc834fe",
					"user": {
						"registration_date": {
							"formatted" : "Wed, 06 Mar 2019 03:47:27 GMT",
							"timestamp" : 1551844047
						},
						"username": "maya"
					}
				}
			},
			{
				"code" : 401
			},
			{
				"code" : 405
			},
			{
				"code" : 500
			}
		]
	},
	"register_user" : {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"title" : "Register User",
		"description" : "Register a new user.",
		"endpoint" : "/user/auth/register",
		"request_method" : "POST",
		"type" : "object",
		"properties" : {
			"username" : {
				"type" : "string",
				"description" : "The new user's username"
			},
			"email" : {
				"type" : "string",
				"description" : "The new user's email address",
				"format" : "email"
			},
			"password" : {
				"type" : "string",
				"description" : "The new user's password"
			},
			"beta_code" : {
				"type": "string",
				"description": "A code for registerting during the invite-only period",
				"minLength": 36,
				"maxLength": 36
			}
		},
		"required" : ["username", "email", "password", "beta_code"],
		"responses" : [
			{
				"code": 200,
				"example_json" : {
					"message": "Successfully registered user",
					"user": {
						"registration_date": {
							"formatted" : "Wed, 06 Mar 2019 03:47:27 GMT",
							"timestamp" : 1551844047
						},
						"username": "maya"
					}
				}
			},
			{
				"code": 400,
				"example_json": {
					"error": "Client Error",
					"message": "Invalid beta code"
				}
			},
			{
				"code" : 405
			},
			{
				"code": 409,
				"example_json" : {
					"error": "Conflict",
					"message" : "Username taken"
				}
			},
			{
				"code" : 500
			}
		]
	},
	"change_password" : {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"title" : "Change Password",
		"description" : "Change a given user's password.",
		"endpoint" : "/user/<int:id>/auth/change-password",
		"request_method" : "PATCH",
		"additional_headers" : [
			"Authorization: Bearer <token>"
		],
		"type" : "object",
		"properties" : {
			"current_password" : {
				"type" : "string",
				"description" : "The user's current password, as a security measure."
			},
			"new_password" : {
				"type" : "string",
				"description" : "The user's new password."
			}
		},
		"required" : ["current_password", "new_password"],
		"responses" : [
			{
				"code": 200,
				"example_json" : {
					"message": "Successfully changed password",
					"user": {
						"registration_date": {
							"formatted" : "Wed, 06 Mar 2019 03:47:27 GMT",
							"timestamp" : 1551844047
						},
						"username": "maya"
					}
				}
			},
			{
				"code" : 401
			},
			{
				"code": 403,
				"example_json" : {
					"error": "Unauthorized",
					"message" : "Current password incorrect"
				}
			},
			{
				"code" : 404
			},
			{
				"code" : 405
			},
			{
				"code" : 500
			}
		]
	},
	"invite_friend" : {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"title" : "Invite Friend",
		"description" : "Invite a given user to be your friend.",
		"endpoint" : "/user/<int:id>/friend-invite",
		"request_method" : "POST",
		"additional_headers" : [
			"Authorization: Basic <username>:<password>"
		],
		"type" : "None",
		"responses" : [
			{
				"code": 200,
				"message": "Successfully invited user to be your friend",
				"user": { "details": "user details" }
			},
			{
				"code": 201,
				"message": "User already invited to be your friend",
				"user": { "details": "user details" }
			},
			{
				"code" : 401
			},
			{
				"code" : 404
			},
			{
				"code" : 405
			},
			{
				"code" : 500
			}
		]
	},
	"accept_friend_invite" : {
		"$schema": "http://json-schema.org/draft-07/schema#",
		"title" : " Accept Friend Invite",
		"description" : "Accept a friend invite from a given user.",
		"endpoint" : "/user/<int:id>/accept-friend-invite",
		"request_method" : "PATCH",
		"additional_headers" : [
			"Authorization: Basic <username>:<password>"
		],
		"type" : "None",
		"responses" : [
			{
				"code": 200,
				"message": "Successfully accepted friend invite",
				"user": { "details": "user details" }
			},
			{
				"code": 201,
				"message": "You are already friends with this user",
				"user": { "details": "user details" }
			},
			{
				"code": 400,
				"message": "You don't have a friend invite from this player",
				"user": { "details": "user details" }
			},
			{
				"code" : 401
			},
			{
				"code" : 404
			},
			{
				"code" : 405
			},
			{
				"code" : 500
			}
		]
	}
}